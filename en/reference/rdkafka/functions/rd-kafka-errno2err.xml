<refentry xml:id="function.rd-kafka-errno2err" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>rd_kafka_errno2err</refname>
  <refpurpose>Convert the system errno to a kafka error code</refpurpose>
  <warning>
   <simpara>This function has been <emphasis>DEPRECATED</emphasis>. Relying on this feature is highly discouraged.</simpara>
  </warning>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>integer</type><methodname>rd_kafka_errno2err</methodname>
   <methodparam><type>integer</type><parameter>errnox</parameter></methodparam>
  </methodsynopsis>
  <para>
   Converts the system errno <parameter>errnox</parameter> to a kafka error code.
  </para>

 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   <varlistentry>
    <term><parameter>errnox</parameter> (<type>integer</type>)</term>
    <listitem>
     <para>
      A system errno
     </para>
    </listitem>
   </varlistentry>
  </variablelist>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Returns a kafka error code as an <type>integer</type>.
  </para>
 </refsect1>

</refentry>

